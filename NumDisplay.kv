<NumDisplay>:
	canvas:

		Rectangle:
			size: root.width, root.height+2
			pos: 0,0

		#Rectangle:
		#	size: root.width, root.height
		#	pos: 0,root.height

			
	Label:
		text: str(root.number)
		pos: (root.width/2, root.height*1.5+100)
		text_size: root.size
		color: (1, 1, 1, 1)
		font_size: 30
	Label:
		text: str(root.answer)
		pos: (root.width/2, root.height*1.5)
		color: (1, 1, 1, 0.8)
    	text_size: root.size
		font_size: 15
	Label:
		text: root.equation
		pos: (root.width/2, root.height*1.5+70)
		color: (1, 1, 1, 0.4)
    	text_size: root.size
		font_size: 15
