<NumDisplay>:
    canvas:
        Rectangle:
            pos: 0, 0
            size: 10, self.height+2
	Label:
		text: str(root.number)
		pos: (root.width/2, root.height*1.5+100)
		text_size: root.size
		color: (1, 1, 1, 1)
		font_size: 30
	Label:
		text: str(root.answer)
		pos_hint: {'x':0,'top':1}
		color: (1, 1, 1, 0.8)
    	text_size: root.size
		font_size: 24
	Label:
		text: root.equation2
		pos: (root.width/2, root.height*1.5-30)
		color: (0, 1, 1, 0.4)
    	text_size: root.size
		font_size: 15
	Label:
		text: root.equation
		pos: (root.width/2, root.height*1.5+70)
		color: (1, 1, 1, 0.4)
    	text_size: root.size
		font_size: 15
	Label:
		text: "lol"
		center_x: root.width / 4
		top: root.top - 50
		color: (1, 0, 1, 0.4)
    	text_size: root.size
		font_size: 15
